# Environment Configuration Template
# Copy this file to .env and fill in your values

# Application Settings
ENVIRONMENT=development
DEBUG=true
APP_NAME="Call Analysis System"
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=call_analysis
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis Configuration  
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# OpenAI Configuration
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.1
OPENAI_MAX_TOKENS=1000

# Security Configuration
SECURITY_SECRET_KEY=your_very_long_secret_key_at_least_32_characters_long
SECURITY_ALGORITHM=HS256
SECURITY_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
SECURITY_CORS_ORIGINS=["*"]
SECURITY_CORS_METHODS=["*"]
SECURITY_CORS_HEADERS=["*"]

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Monitoring Configuration
MONITORING_ENABLED=false
MONITORING_PROMETHEUS_PORT=8000
MONITORING_OTEL_ENABLED=false
MONITORING_OTEL_ENDPOINT=
MONITORING_OTEL_SERVICE_NAME=call-analysis

# Feature Flags
ENABLE_REAL_TIME_COACHING=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_SEMANTIC_ANALYSIS=true

# Processing Settings
BATCH_SIZE=100
MAX_CONCURRENT_ANALYSES=10
ANALYSIS_TIMEOUT=300